<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Search Results</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>User Search Results</h1>
  <div class="parks">

  <% for (let i = 0; i < parks.length; i++) { %>
    <% if (parks[i].typecatego === "Recreation Field/Courts") { %>
    <div id="teaser<%= i %>" class="teaser">
      <div><%= parks[i].signname %></div>
      <div><%= parks[i].location %></div>
      <button id="<%= i %>" class="button">Learn More</button>
    </div>
    <div id="modal<%= i %>" class="modal">
      <div><%= parks[i].signname %></div>
      <div><%= parks[i].address %></div>
      <div><%= parks[i].location %></div>
      <div><%= parks[i].gispropnum %></div>
      <div><%= facs[i].gispropnum %></div>

      <button id="add<%= i %>" class="button">Add</button>
      <button id="close<%= i %>" class="button">Close</button>
    </div>
    <% } %>
  <% } %>

  </div>
  <div id="proof">
    <h4><%= user.username %></h4>
  </div>
  <form action="/auth?_method=DELETE" method="POST">
    <input type="submit" value="Logout">
  </form>
  <a href="/userSearch">Back</a>
  <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js'></script>
  <script src="/scripts/modal.js" type="text/javascript"></script>
</body>
</html>
