<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Search Results</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>User Search Results</h1>
  <div class="parks">

  <% //test comment %>
  <% let newObj = {} %>
  <% for (let i = 0; i < parks.length; i++) { %>
    <% newObj[parks[i].gispropnum] = parks[i] %>
  <% } %>
  <% for (let i = 0; i < facs.length; i++) { %>
    <% let temp = newObj[facs[i].gispropnum] %>
    <% for (let key in facs[i]) { %>
      <% temp[key] = facs[i][key] %>
    <% } %>
  <% } %>

  <% for (let key in newObj) { %>
    <% if (newObj[key].typecatego === 'Recreation Field/Courts') { %>
    <div id="teaser<%= key %>" class="teaser">
      <div><%= newObj[key].signname %></div>
      <div><%= newObj[key].location %></div>
      <button id="<%= key %>" class="button">Learn More</button>
    </div>
    <div id="modal<%= key %>" class="modal">
      <div><%= newObj[key].signname %></div>
      <div><%= newObj[key].address %></div>
      <div><%= newObj[key].location %></div>
      <div><%= newObj[key].surface_ty %></div>
      <button id="add<%= key %>" class="button">Add</button>
      <button id="close<%= key %>" class="button">Close</button>
    </div>
    <% } %>
  <% } %>

  </div>
  <div id="proof">
    <h4><%= user.username %></h4>
  </div>
  <form action="/auth?_method=DELETE" method="POST">
    <input type="submit" value="Logout">
  </form>
  <a href="/userSearch">Back</a>
  <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js'></script>
  <script src="/scripts/modal.js" type="text/javascript"></script>
</body>
</html>
